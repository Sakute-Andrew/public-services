<?xml version="1.0" encoding="UTF-8"?>

<?import java.lang.*?>
<?import javafx.geometry.*?>
<?import javafx.scene.control.*?>
<?import javafx.geometry.Insets?>
<?import javafx.scene.control.Button?>
<?import javafx.scene.control.ComboBox?>
<?import javafx.scene.control.DatePicker?>
<?import javafx.scene.control.TextField?>
<?import javafx.scene.layout.*?>
<?import javafx.scene.text.*?>

<BorderPane prefHeight="400.0" prefWidth="600.0" xmlns="http://javafx.com/javafx/8" xmlns:fx="http://javafx.com/fxml/1" fx:controller="com.ceo.publicservices.presentation.controller.mainmenu.InputMeters">
    <center>
        <BorderPane prefHeight="520.0" prefWidth="445.0">
            <center>
                <VBox alignment="CENTER_LEFT" prefHeight="353.0" prefWidth="445.0" spacing="20.0" BorderPane.alignment="CENTER">
                    <children>
                        <Text styleClass="header" text="Вітаємо, на даній сторінці можна записати показники">
                            <font>
                                <Font size="15.0" />
                            </font>
                        </Text>
                        <Text text="Заповніть показники" />
                        <HBox alignment="CENTER_LEFT" spacing="10.0">
                            <children>
                                <Text text="Оберіть тип комунальної послуги">
                                    <HBox.margin>
                                        <Insets right="20.0" />
                                    </HBox.margin>
                                    <font>
                                        <Font size="14.0" />
                                    </font>
                                </Text>
                                <ComboBox fx:id="picker" prefHeight="25.0" prefWidth="92.0" />
                            </children>
                        </HBox>
                        <HBox alignment="CENTER_LEFT" spacing="10.0">
                            <children>
                                <Text text="Оберіть дату показника">
                                    <HBox.margin>
                                        <Insets right="20.0" />
                                    </HBox.margin>
                                    <font>
                                        <Font size="14.0" />
                                    </font>
                                </Text>
                                <DatePicker fx:id="pickerData" />
                            </children>
                        </HBox>
                        <HBox alignment="CENTER_LEFT" spacing="10.0">
                            <children>
                                <Text text="Введіть кількість">
                                    <HBox.margin>
                                        <Insets right="20.0" />
                                    </HBox.margin>
                                    <font>
                                        <Font size="14.0" />
                                    </font>
                                </Text>
                                <TextField fx:id="inputField" prefHeight="25.0" prefWidth="316.0" promptText="Введіть кількість" styleClass="input" />
                            </children>
                        </HBox>
                        <Button onAction="#input" styleClass="button" text="Заповнити" textFill="WHITE" />
                    </children>
                    <padding>
                        <Insets bottom="90.0" left="90.0" right="90.0" top="90.0" />
                    </padding>
                </VBox>
            </center>
        </BorderPane>
    </center>
</BorderPane>
